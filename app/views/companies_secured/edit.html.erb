<div id="content-container" ng-controller="edit-company-controller">

    <!--Page Title-->
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <div id="page-title">
        <h1 class="page-header text-overflow">Edit company</h1>
    </div>

    <div id="page-content">
        
        <div class="panel">
            <%= form_for :company, :url => {:controller => 'companies_secured', :action => 'update'}, html: { class: "form-horizontal"} do |f| %>
            <div class="panel-footer text-center">
                <a class="btn btn-danger" href="/private/companies/<%= @company.id %>/show">Cancel</a>
                <button type="submit" class="btn btn-success">Save</button>
            </div>
            <div class="panel-body">
                <div class="col-md-12">
                    <p class="bord-btm pad-ver text-main text-bold">Company information</p>
                </div>
                <div class="col-md-12">
                    <div class="form-group col-md-4">
                        <label class="col-md-3 control-label text-bold">Name:</label>
                        <div class="col-md-9">
                            <input type="text" required="" class="form-control" name="company[name]" id="company_name" ng-model="company.name" value="<%= @company.name %>"/>
                            
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer text-center">
                <a class="btn btn-danger" href="">Cancel</a>
                <button type="submit" class="btn btn-success">Save</button>
            </div>
            <% end %>
        </div>
        

