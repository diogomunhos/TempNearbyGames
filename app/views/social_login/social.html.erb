                      <p class="form-footer">
                        <input type="submit" name="signup_submit" id="signup_submit" value="Registre-se" />
                      </p>
                    </form>
                  </div>

                </div>
                </div>

              <div class="clear-float"></div>
            </div>
            
          </div>
          
