<div id="slider-imgs">
	<div class="featured-img-box">
		<div id="featured-img-1" class="featured-img"></div>
	</div>
</div>
<div id="top-layer">
	<div id="header-top">
		<%= render '/home/wrapper_top' %>
	</div>
	<section id="content">
		<%= render '/home/header' %>
		<div id="main-box" >
			<input type="hidden" value="<%= @stats %>" id="cached" />
			<div id="main">
				<div class="content-padding">
					<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
					<ins class="adsbygoogle"
					style="display:block"
					data-ad-client="ca-pub-8655806429950106"
					data-ad-slot="8764496876"
					data-ad-format="auto"></ins>
					<script>
						(adsbygoogle = window.adsbygoogle || []).push({});
					</script>
				</div>
				<article itemscope itemtype="http://schema.org/Article">
					<h1  itemprop="headline" style="padding: 0px 28px; margin-bottom: 20px;"><%= @article.title %></h1>
					<div class="content-padding">
					  <meta itemscope itemprop="mainEntityOfPage"  itemType="http://schema.org/WebPage" itemid="https://google.com/article"/>
					  <meta itemprop="inLanguage" content="pt-br"/>
					  <meta itemprop="datePublished" content="<%= @article.created_at %>"/>
					  <meta itemprop="dateModified" content="<%= @article.updated_at %>"/>
					  <div itemprop="publisher" itemscope itemtype="http://schema.org/Organization">
					    <div itemprop="logo" itemscope itemtype="http://schema.org/ImageObject">
					      <meta itemprop="url" content="https://www.wahiga.com/assets/images/wahiga_logo_2.png"/>
					      <meta itemprop="width" content="200"/>
					      <meta itemprop="height" content="60"/>
					    </div>
					    <meta itemprop="name" content="Wahiga">
					  </div>
					  <% @article.article_documents.each do |image| %>
							<% if image.document_type === "Header" %>
					  <span itemprop="image" style="display: none" itemscope itemtype="http://schema.org/ImageObject"><meta itemprop="url" content="https://www.wahiga.com/images/<%= image.document.id %>/<%= image.document.file_name %>"><meta itemprop="width" content="700"><meta itemprop="height" content="300"></span>
					  		<% end %>
					  <% end %>
					<div class="article-full">
						<div class="article-main-photo">
							<% @article.article_documents.each do |image| %>
							<% if image.document_type === "Header" %>
							<img itemprop="image" src="/images/<%= image.document.id %>/<%= image.document.file_name %>" alt="" title="" />
							<% end %>
							<% end %>	
						</div>
						<div class="article-icons">
						</div>
						<div class="clear-float do-the-split"></div>
						<div class="article-content" itemprop="articleBody">
							<%= raw @article.body %>
						</div>
					</div>
					<div class="article-footer">
						<div class="about-author" itemprop="author" itemscope itemtype="http://schema.org/Person">
							<meta itemprop="homeLocation" content="São Paulo"/>
							<h2><span>Sobre o autor</span></h2>
							<div class="inner">
								<a href="" class="avatar avatar-large">
									<img src="<%= @author[:profile_image_url] %>" alt="" style="width: 90px; height: 90px;" class="author-image setborder" />
								</a>
								<div class="side">
									<div class="about-head">
										<a href="" class="comment-user"><b></b></a>
									</div>
									<i itemprop="name"><%= @author[:full_name] %></i>
								<a href="/all-articles/<%= @author[:full_name].gsub(' ', '_') %>/<%= @author[:id] %>"><i class="fa fa-comment"></i><%= @author[:total_of_articles] %> Artigos</a>
								</div>
								<div class="clear-float">
									<p itemprop="description"><%= truncate(@author[:about], length: 110) %></p>
								</div>
							</div>
						</div>
						<div class="similar-posts">
							<h2><span>Outras notícias</span></h2>
							<div class="home-article right">
								<ul>
									<% @randomArticles.each do |articles| %>
									<li>
										<a href="<% if articles.game != nil %>/<%= articles.game.friendly_url %><% end %>/<%= articles.article_type.downcase %>/<%= articles.friendly_url %>">
											<% articles.article_documents.each do |image| %>
											<% if image.document_type === "Thumb" %>
											<img src="/images/<%= image.document.id %>" alt="" title="" />
											<% end %>
											<% end %>
											<strong><%= truncate(articles.title, length: 33) %></strong>
											<span class="a-txt"><%= truncate(articles.preview, length: 33) %></span>
										</a>
									</li>
									<% end %>
								</ul>
							</div>
						</div>
					</div>
				</div>
				</article>
				<div class="content-padding">
					<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
					<ins class="adsbygoogle"
					style="display:block"
					data-ad-client="ca-pub-8655806429950106"
					data-ad-slot="9337429679"
					data-ad-format="auto"></ins>
					<script>
						(adsbygoogle = window.adsbygoogle || []).push({});
					</script>
				</div>
			</div>
			<aside id="sidebar">
				<%= render 'home/popular_articles' %>
				<%= render 'home/we_are_social' %>
				<div class="panel">
					<div class="panel-content">
						<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
						<ins class="adsbygoogle"
						style="display:block"
						data-ad-client="ca-pub-8655806429950106"
						data-ad-slot="7227058073"
						data-ad-format="auto"></ins>
						<script>
							(adsbygoogle = window.adsbygoogle || []).push({});
						</script>
					</div>
				</div>
			</aside>
			<div class="clear-float"></div>
		</div>
	</section>
</div>
