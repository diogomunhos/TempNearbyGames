<div id="content-container" ng-controller="edit-social-media-controller">

    <!--Page Title-->
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <div id="page-title">
        <h1 class="page-header text-overflow">Edit social media</h1>
    </div>

    <div id="page-content">
        
        <div class="panel">
            <%= form_for :social_media, :url => {:controller => 'social_medias_secured', :action => 'update'}, html: { class: "form-horizontal"} do |f| %>
            <div class="panel-footer text-center">
                <a class="btn btn-danger" href="/private/social-medias/<%= @socialMedia.id %>/show">Cancel</a>
                <button type="submit" class="btn btn-success">Save</button>
            </div>
            <div class="panel-body">
                <div class="col-md-12">
                    <p class="bord-btm pad-ver text-main text-bold">Social Media information</p>
                </div>
                <div class="col-md-12">
                    <div class="form-group col-md-4">
                        <label class="col-md-3 control-label text-bold">Name:</label>
                        <div class="col-md-9">
                            <input type="text" required="" class="form-control" name="social_media[name]" id="social_media_name" ng-model="socialMedia.name" value="<%= @socialMedia.name %>"/>
                            
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        <select class="form-control selectpicker" name="social_media[media_api]" id="article_platforms" id="social_media_media_api">
                            <option value="Google+" <% if @socialMedia.media_api == "Google+" %> selected <% end %>>Google+</option>
                            <option value="Facebook" <% if @socialMedia.media_api == "Facebook" %> selected <% end %>>Facebook</option>
                            <option value="Twitter" <% if @socialMedia.media_api == "Twitter" %> selected <% end %>>Twitter</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="panel-footer text-center">
                <a class="btn btn-danger" href="">Cancel</a>
                <button type="submit" class="btn btn-success">Save</button>
            </div>
            <% end %>
        </div>
        

