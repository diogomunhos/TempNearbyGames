<div class="row">
    <div class="col-lg-12">
        <div >
            <button class="btn btn-primary" ng-click="newCinemaCompany()">New Company</button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <p class="bord-btm pad-ver text-main text-bold">Companies</p>
    </div>
    <div class="panel-body" ng-cloak>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="cc in cinemaCompanies">
                        <td>
                            
                            <input type="text" class="form-control disabled" id="user_company_name" ng-model="cc.companyName" value="{{cc.companyName}}" />
                            
                            <a href="" class="col-md-2 btn btn-default" data-target="#select-company-modal" data-toggle="modal"><i class="fa fa-search"></i></a>
                        </td>
                        <td>{{cc.company_type}}</td>
                        <td><button type="button" class="btn btn-sm btn-danger">Remove</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>