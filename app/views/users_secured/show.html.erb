<div id="content-container">

    <!--Page Title-->
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <div id="page-title">
        <h1 class="page-header text-overflow"><%= @user.name %></h1>
    </div>

    <div id="page-content">
        <div class="form-group" id="messages">
            <%= raw flash_message %>
        </div>
        <div class="panel">
            <div class="panel-footer text-center">
                <a class="btn btn-primary" href="/private/users/<%= @user.id %>/edit">Edit</a>
                <a class="btn btn-primary" href="/private/users/<%= @user.id %>/reset-password">Reset password</a>
            </div>
            <form class="panel-body form-horizontal">
                <div class="col-md-12">
                    <p class="bord-btm pad-ver text-main text-bold">User information</p>
                </div>
                <div class="col-md-12">
                    <div class="form-group col-md-4">
                        <label class="col-md-3 control-label text-bold">Name:</label>
                        <div class="col-md-9">
                            <p class="form-control-static"><%= @user.name %></p>
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        <label class="col-md-3 control-label text-bold">Last name:</label>
                        <div class="col-md-9">
                            <p class="form-control-static"><%= @user.last_name %></p>
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        <label class="col-md-3 control-label text-bold">Nickname:</label>
                        <div class="col-md-9">
                            <p class="form-control-static"><%= @user.nickname %></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group col-md-4">
                        <label class="col-md-3 control-label text-bold">Email:</label>
                        <div class="col-md-9">
                            <p class="form-control-static"><%= @user.email %></p>
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        <label class="col-md-3 control-label text-bold">Email confirmed:</label>
                        <div class="col-md-9">
                            <div class="checkbox">
                                <input id="disabled-form-inline-checkbox" class="magic-checkbox" type="checkbox" <% if @user.email_confirmed %> checked="" <% end %> disabled="">
                                <label for="disabled-form-inline-checkbox"></label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        <label class="col-md-3 control-label text-bold">Profile:</label>
                        <div class="col-md-9">
                            <p class="form-control-static"><a href="/private/profiles/show/<%= @user.profile_id %>" ><%= @profilename %></a></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <p class="bord-btm pad-ver text-main text-bold">System information</p>
                </div>
                <div class="col-md-12">
                    <div class="form-group col-md-4">
                        <label class="col-md-3 control-label text-bold">Created date:</label>
                        <div class="col-md-9">
                            <p class="form-control-static"><%= @user.created_at %></p>
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <label class="col-md-3 control-label text-bold">Last updated date:</label>
                        <div class="col-md-9">
                            <p class="form-control-static"><%= @user.updated_at %></p>
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        
                    </div>
                </div> 
            </form>
            <div class="panel-footer text-center">
                <a class="btn btn-primary" href="">Edit</a>
                <a class="btn btn-primary" href="">Reset password</a>
            </div>
        </div>

