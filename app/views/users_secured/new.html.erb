<div id="content-container">

    <div id="page-title">
        <h1 class="page-header text-overflow">New User</h1>
    </div>

    <div id="page-content">
        <div class="form-group" id="messages">
            <%= raw flash_message %>
        </div>
        <div class="panel">

        <%= form_for :user, :url => {:controller => 'users_secured', :action => 'create'}, html: { class: "form-horizontal"} do |f| %>
        <div class="panel-body">
            <div class="col-md-12">
                <p class="bord-btm pad-ver text-main text-bold">User information</p>
            </div>
            <!--Static-->
            <div class="col-md-12">
                <div class="form-group col-md-3">
                    <label class="col-md-4 control-label" for="article_title">Name:*</label>
                    <div class="col-md-8">
                        <input type="text" required="" class="form-control" name="user[name]" id="user_name" value="<%= @user.name %>"/>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    <label class="col-md-4 control-label" for="article_title">Last name:*</label>
                    <div class="col-md-8">
                        <input type="text" required="" class="form-control" name="user[last_name]" id="user_last_name" value="<%= @user.last_name %>"/>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    <label class="col-md-4 control-label" for="article_subtitle">Nickname:</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" name="user[nickname]" id="user_nickname" value="<%= @user.nickname %>">
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-3">
                    <label class="col-md-4 control-label" for="article_title">Email:*</label>
                    <div class="col-md-8">
                        <input type="text" required="" class="form-control" name="user[email]" id="user_email" value="<%= @user.email %>"/>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    <label class="col-md-4 control-label" for="article_title">Profile:*</label>
                    <div class="col-md-8">
                        <input type="text" required="" class="form-control" name="profile[name]" id="profile_name" value="<%= @profilename %>"/>
                    </div>
                </div>
            </div>

            
        </div>

        <div class="panel-footer text-right">
            <button type="submit" class="btn btn-success btn-bock">Save</button>
        </div>
               
        <% end %>
    </div>
</div>

</div>