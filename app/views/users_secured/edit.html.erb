<div id="content-container" ng-controller="edit-user-controller">

    <!--Page Title-->
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <div id="page-title">
        <h1 class="page-header text-overflow">Edit user</h1>
    </div>
    <%= render "users_secured/select_profile" %>

    <div id="page-content">
        
        <div class="panel">
            <%= form_for :user, :url => {:controller => 'users_secured', :action => 'update'}, html: { class: "form-horizontal"} do |f| %>
            <div class="panel-footer text-center">
                <a class="btn btn-danger" href="/private/users/<%= @user.id %>/show">Cancel</a>
                <button type="submit" class="btn btn-success">Save</button>
            </div>
            <div class="panel-body">
                <div class="col-md-12">
                    <p class="bord-btm pad-ver text-main text-bold">User information</p>
                </div>
                <div class="col-md-12">
                    <div class="form-group col-md-4">
                        <label class="col-md-3 control-label text-bold">Name:</label>
                        <div class="col-md-9">
                            <input type="text" required="" class="form-control" name="user[name]" id="user_name" ng-model="user.name" value="<%= @user.name %>"/>
                            
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        <label class="col-md-3 control-label text-bold">Last name:</label>
                        <div class="col-md-9">
                            <input type="text" required="" class="form-control" name="user[last_name]" id="user_last_name" ng-model="user.last_name" value="<%= @user.last_name %>"/>
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        <label class="col-md-3 control-label text-bold">Nickname:</label>
                        <div class="col-md-9">
                            <input type="text" required="" class="form-control" name="user[nickname]" id="user_nickname" ng-model="user.nickname" value="<%= @user.nickname %>"/>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group col-md-4">
                        <label class="col-md-3 control-label text-bold">Email:</label>
                        <div class="col-md-9">
                             <input type="email" required="" class="form-control" name="user[email]" id="user_email" ng-model="user.email" value="<%= @user.email %>"/>
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        <label class="col-md-3 control-label text-bold">Email confirmed:</label>
                        <div class="col-md-9">
                            <div class="checkbox">
                                <input id="disabled-form-inline-checkbox" class="magic-checkbox" type="checkbox" <% if @user.email_confirmed %> checked="" <% end %> disabled="">
                                <label for="disabled-form-inline-checkbox"></label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        <label class="col-md-3 control-label text-bold">Profile:</label>
                        <div class="col-md-7">
                            <input type="text" class="form-control disabled" id="user_profile_name" name="user[profile_name]" ng-model="user.profile" value="<%= @profilename %>" />
                        </div>
                        <a href="" class="col-md-2 btn btn-default" data-target="#select-profile-modal" data-toggle="modal"><i class="fa fa-search"></i></a>
                    </div>
                </div>
            </div>
            <div class="panel-footer text-center">
                <a class="btn btn-danger" href="">Cancel</a>
                <button type="submit" class="btn btn-success">Save</button>
            </div>
            <% end %>
        </div>
        

